<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_500"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Kaula Lumpur, MY" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_round"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Refresh" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_temperature"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_temperature_unit"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_celcius"
            app:layout_constraintStart_toEndOf="@+id/tv_temperature_value"
            app:layout_constraintTop_toBottomOf="@+id/tv_location" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_big"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_thunderstorm_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_wind_speed"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_wind"
            app:layout_constraintEnd_toStartOf="@+id/tv_wind_speed"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_big" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cloudiness"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_cloudiness"
            app:layout_constraintEnd_toStartOf="@+id/tv_cloudiness"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_humidity"
            app:layout_constraintTop_toBottomOf="@+id/iv_big" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_humidity"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_humidity"
            app:layout_constraintEnd_toStartOf="@+id/tv_humidity"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_wind_speed"
            app:layout_constraintTop_toBottomOf="@+id/iv_big" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wind_speed"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iv_humidity"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_wind_speed"
            app:layout_constraintTop_toBottomOf="@+id/iv_big"
            tools:text="1.5 mps" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iv_cloudiness"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_humidity"
            app:layout_constraintTop_toBottomOf="@+id/iv_big"
            tools:text="69 %" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cloudiness"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_cloudiness"
            app:layout_constraintTop_toTopOf="@+id/iv_humidity"
            tools:text="75%" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_temperature_value"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_temperature"
            app:layout_constraintTop_toBottomOf="@+id/tv_location"
            tools:text="29" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_weather"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_location,btn_refresh,iv_temperature,iv_temperature_unit,iv_big,iv_wind_speed,iv_cloudiness,iv_humidity,tv_wind_speed,tv_humidity,tv_cloudiness,tv_temperature_value" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>